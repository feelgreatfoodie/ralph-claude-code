{
  "project": "my-project",
  "git": {
    "strategy": "single-branch",
    "baseBranch": "main",
    "branchPrefix": "ralph/"
  },
  "quality": {
    "autoDetect": true,
    "commands": {
      "lint": null,
      "typecheck": null,
      "test": null,
      "build": null
    },
    "smartRecovery": true,
    "maxFixAttempts": 3
  },
  "iterations": {
    "max": 20,
    "delaySeconds": 2
  },
  "claude": {
    "model": "sonnet"
  },
  "parallel": {
    "enabled": false,
    "maxConcurrent": 3
  },
  "cachebash": {
    "enabled": true,
    "pollIntervalSeconds": 30
  }
}
